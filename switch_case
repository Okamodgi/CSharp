Console.WriteLine("Введите число от 1 до 3: ");
int a = Convert.ToInt32(Console.ReadLine());

switch (a)
{
    case 1:
        Console.WriteLine("ваше число 1");
        break;

    case 2:
        Console.WriteLine("ваше число 2");
        break;

    case 3:
        Console.WriteLine("ваше число 3");
        break;
}
